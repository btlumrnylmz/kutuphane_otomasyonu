@{
    ViewData["Title"] = "Erişim Reddedildi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="text-danger mb-3">Erişim Reddedildi</h2>
                    <p class="lead mb-4">
                        Bu sayfaya erişim yetkiniz bulunmamaktadır. 
                        Lütfen sistem yöneticisi ile iletişime geçin.
                    </p>
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>
                            Ana Sayfaya Dön
                        </a>
                        <a asp-action="Login" asp-controller="Auth" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Giriş Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
