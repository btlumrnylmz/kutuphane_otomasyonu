@model IEnumerable<KutuphaneOtomasyonu.Models.Loan>
@using KutuphaneOtomasyonu.Models
@{
    ViewData["Title"] = "Ödünç İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ödünç İşlemleri</h2>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Borrow" method="post" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Üye</label>
                <select name="memberId" class="form-select" asp-items="ViewBag.Members"></select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Uygun Kopya</label>
                <select name="copyId" class="form-select" asp-items="ViewBag.AvailableCopies"></select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Ödünç Ver</button>
            </div>
        </form>
    </div>
    <div class="card-footer small text-muted">Sadece durumu 'available' olan kopyalar listelenir.</div>
}</div>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Reserve" method="post" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Üye</label>
                <select name="memberId" class="form-select" asp-items="ViewBag.Members"></select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Ödünçteki Kopya</label>
                <select name="copyId" class="form-select" asp-items="ViewBag.LoanedCopies"></select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-outline-secondary">Bekleme Listesine Ekle</button>
            </div>
        </form>
    </div>
    <div class="card-footer small text-muted">Kopya iade edilince ilk rezervasyon bilgilendirilir (simülasyon).</div>
}</div>

<h5>Aktif Ödünçler</h5>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Kitap</th>
            <th>Kopya</th>
            <th>Ödünç</th>
            <th>Vade</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var l in Model.Where(x => x.ReturnedAt == null))
    {
        <tr>
            <td>@l.Member.FullName</td>
            <td>@l.Copy.Book.Title</td>
            <td>@l.Copy.ShelfLocation</td>
            <td>@l.LoanedAt</td>
            <td>@l.DueAt</td>
            <td class="text-end">
                <form asp-action="Return" method="post" class="d-inline">
                    <input type="hidden" name="loanId" value="@l.LoanId" />
                    <button type="submit" class="btn btn-sm btn-success">İade Al</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
}</table>

<h5>İade Edilenler</h5>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Kitap</th>
            <th>Kopya</th>
            <th>Ödünç</th>
            <th>Vade</th>
            <th>İade</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var l in Model.Where(x => x.ReturnedAt != null))
    {
        <tr>
            <td>@l.Member.FullName</td>
            <td>@l.Copy.Book.Title</td>
            <td>@l.Copy.ShelfLocation</td>
            <td>@l.LoanedAt</td>
            <td>@l.DueAt</td>
            <td>@l.ReturnedAt</td>
        </tr>
    }
    </tbody>
}</table>

@if (ViewBag.Pagination != null)
{
    <div class="mt-4">
        <partial name="_Pagination" model="ViewBag.Pagination" />
    </div>
}


