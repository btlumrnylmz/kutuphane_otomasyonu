@model IEnumerable<KutuphaneOtomasyonu.Models.ReturnRequest>
@{
    ViewData["Title"] = "Bekleyen İade Talepleri";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Bekleyen İade Talepleri
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Üye</th>
                                    <th>Kitap</th>
                                    <th>Ödünç Tarihi</th>
                                    <th>Vade Tarihi</th>
                                    <th>Talep Tarihi</th>
                                    <th>Gecikme</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model)
                                {
                                    var loan = request.Loan;
                                    var isOverdue = loan != null && DateTime.UtcNow > loan.DueAt;
                                    var daysLate = loan != null && isOverdue ? (DateTime.UtcNow - loan.DueAt).Days : 0;
                                    
                                    <tr>
                                        <td><strong>@loan?.Member?.FullName</strong></td>
                                        <td>
                                            <strong>@loan?.Copy?.Book?.Title</strong><br>
                                            <small class="text-muted">@loan?.Copy?.ShelfLocation</small>
                                        </td>
                                        <td>@loan?.LoanedAt.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            @if (isOverdue)
                                            {
                                                <span class="text-danger"><strong>@loan?.DueAt.ToString("dd.MM.yyyy")</strong></span>
                                            }
                                            else
                                            {
                                                @loan?.DueAt.ToString("dd.MM.yyyy")
                                            }
                                        </td>
                                        <td>@request.RequestedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @if (isOverdue)
                                            {
                                                <span class="badge bg-danger">@daysLate gün</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Gününde</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <form asp-action="ApproveReturn" method="post" class="d-inline">
                                                    <input type="hidden" name="returnRequestId" value="@request.ReturnRequestId" />
                                                    <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('İade talebini onaylamak istediğinize emin misiniz?');">
                                                        <i class="fas fa-check me-1"></i>
                                                        Onayla
                                                    </button>
                                                </form>
                                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal@request.ReturnRequestId">
                                                    <i class="fas fa-times me-1"></i>
                                                    Reddet
                                                </button>
                                            </div>

                                            <!-- Reddetme Modal -->
                                            <div class="modal fade" id="rejectModal@request.ReturnRequestId" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">İade Talebini Reddet</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <form asp-action="RejectReturn" method="post">
                                                            <div class="modal-body">
                                                                <input type="hidden" name="returnRequestId" value="@request.ReturnRequestId" />
                                                                <div class="mb-3">
                                                                    <label for="rejectionReason@request.ReturnRequestId" class="form-label">Red Nedeni (İsteğe Bağlı)</label>
                                                                    <textarea id="rejectionReason@request.ReturnRequestId" name="rejectionReason" class="form-control" rows="3" placeholder="Red nedeni..."></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                                <button type="submit" class="btn btn-danger">Reddet</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">
                                            <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                            <br />
                                            Bekleyen iade talebi bulunmamaktadır.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Ödünç İşlemleri
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

