@model IEnumerable<KutuphaneOtomasyonu.Controllers.ReservationRow>
@{
    ViewData["Title"] = "Rezervasyonlar";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Rezervasyonlar
                    </h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Rezervasyon #</th>
                                    <th>Üye</th>
                                    <th>Kitap</th>
                                    <th>Rezervasyon Tarihi</th>
                                    <th>Bildirim Durumu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model)
                                {
                                    <tr>
                                        <td>@r.reservation_id</td>
                                        <td>@r.member_name</td>
                                        <td>@r.book_title</td>
                                        <td>@r.reserved_at.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @if (r.notified)
                                            {
                                                <span class="badge bg-success">Gönderildi</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Bekliyor</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">Rezervasyon bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-controller="Reports" asp-action="Index">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




