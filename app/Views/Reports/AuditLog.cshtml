@model IEnumerable<KutuphaneOtomasyonu.Controllers.AuditLogRow>
@{
    ViewData["Title"] = "Sistem Logları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-file-alt me-2"></i>
                        Sistem Logları (Audit Log)
                    </h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>İşlem</th>
                                    <th>Zaman</th>
                                    <th>Ödünç ID</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model)
                                {
                                    <tr>
                                        <td>@r.action</td>
                                        <td>@r.action_time.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                        <td>@r.loan_id</td>
                                    </tr>
                                }
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">Log kaydı bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-controller="Reports" asp-action="Index">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




