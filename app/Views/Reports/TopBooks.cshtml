@model IEnumerable<KutuphaneOtomasyonu.Controllers.TopBookRow>
@{
    ViewData["Title"] = "En Çok Ödünç Alınanlar (Son 30 Gün)";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trophy me-2"></i>
                        En Çok Ödünç Alınanlar (Son 30 Gün)
                    </h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Sıra</th>
                                    <th>Kitap</th>
                                    <th>Ödünç Sayısı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int rank = 1; }
                                @foreach (var r in Model)
                                {
                                    <tr>
                                        <td><strong>@rank</strong></td>
                                        <td>@r.title</td>
                                        <td>
                                            <span class="badge bg-primary">@r.borrow_count</span>
                                        </td>
                                    </tr>
                                    rank++;
                                }
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">Son 30 günde ödünç verilen kitap bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-controller="Reports" asp-action="Index">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




