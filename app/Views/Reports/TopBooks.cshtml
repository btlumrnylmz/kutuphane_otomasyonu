@model IEnumerable<KutuphaneOtomasyonu.Controllers.TopBookRow>
@{
    ViewData["Title"] = "En Çok Ödünç Alınanlar (Son 30 Gün)";
}

<h2>En Çok Ödünç Alınanlar (Son 30 Gün)</h2>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Kitap</th>
            <th>Ödünç Sayısı</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.title</td>
            <td>@r.borrow_count</td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-secondary" asp-controller="Reports" asp-action="Index">Geri Dön</a>




