@model IEnumerable<KutuphaneOtomasyonu.Controllers.MemberLoanCountRow>
@{
    ViewData["Title"] = "Üye Bazında Ödünç Sayısı";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>
                        Üye Bazında Ödünç Sayısı
                    </h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Üye</th>
                                    <th>Toplam Ödünç</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model)
                                {
                                    <tr>
                                        <td>@r.member_name</td>
                                        <td>
                                            <span class="badge bg-primary">@r.total_loans</span>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="2" class="text-center text-muted">Ödünç kaydı bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-controller="Reports" asp-action="Index">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




