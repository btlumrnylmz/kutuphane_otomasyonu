@model IEnumerable<KutuphaneOtomasyonu.Models.Copy>
@{
    ViewData["Title"] = "Kopyalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Kopyalar</h2>
    <a class="btn btn-primary" asp-action="Create">Yeni Kopya</a>
}</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Kitap</th>
            <th>Raf</th>
            <th>Durum</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Book?.Title</td>
            <td>@item.ShelfLocation</td>
            <td>@item.Status</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.CopyId">Detay</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.CopyId">Düzenle</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.CopyId">Sil</a>
            </td>
        </tr>
    }
    </tbody>
}</table>


