@using KutuphaneOtomasyonu.Services
@inject AuthService AuthService
@model IEnumerable<KutuphaneOtomasyonu.Models.Copy>
@{
    ViewData["Title"] = "Kopyalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = AuthService.IsAdmin();
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 style="font-family: 'Playfair Display', serif; color: #1E293B; font-size: 2.5rem; margin: 0;">
                        <i class="fas fa-copy me-2" style="color: #6366F1;"></i>
                        Kopyalar
                    </h1>
                    <p class="text-muted mt-2 mb-0">Kitap kopyalarını yönetin</p>
                </div>
                @if (isAdmin)
                {
                    <a class="btn btn-primary" asp-action="Create" style="border-radius: 30px; padding: 0.75rem 2rem;">
                        <i class="fas fa-plus me-2"></i>
                        Yeni Kopya Ekle
                    </a>
                }
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 10px;">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 10px;">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm" style="border-radius: 15px;">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Kitap</th>
                                <th>Kopya No</th>
                                <th>Raf Konumu</th>
                                <th>Durum</th>
                                <th>Eklenme Tarihi</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.Book != null)
                                        {
                                            <strong>@item.Book.Title</strong>
                                            <br>
                                            <small class="text-muted">@item.Book.Author</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Kitap bilgisi yok</span>
                                        }
                                    </td>
                                    <td>@item.CopyNumber</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ShelfLocation))
                                        {
                                            <span class="badge bg-info">@item.ShelfLocation</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Available:
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>
                                                    Müsait
                                                </span>
                                                break;
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Loaned:
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-book-reader me-1"></i>
                                                    Ödünç Verilmiş
                                                </span>
                                                break;
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Reserved:
                                                <span class="badge bg-info">
                                                    <i class="fas fa-clock me-1"></i>
                                                    Rezerve
                                                </span>
                                                break;
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Maintenance:
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-tools me-1"></i>
                                                    Bakımda
                                                </span>
                                                break;
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Damaged:
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                                    Hasarlı
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>@item.AddedAt.ToString("dd.MM.yyyy")</td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.CopyId" class="btn btn-sm btn-outline-info" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (isAdmin)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.CopyId" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.CopyId" class="btn btn-sm btn-outline-danger" title="Sil">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (ViewBag.Pagination != null)
        {
            <div class="mt-4">
                <partial name="_Pagination" model="ViewBag.Pagination" />
            </div>
        }
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5 p-4">
                <i class="fas fa-copy fa-4x text-muted mb-3" style="opacity: 0.3;"></i>
                <h5 class="text-muted">Henüz kopya eklenmemiş</h5>
                <p class="text-muted">İlk kopyayı eklemek için yukarıdaki butonu kullanın.</p>
            </div>
        </div>
    }
</div>
