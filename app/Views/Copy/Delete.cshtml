@model KutuphaneOtomasyonu.Models.Copy
@{
    ViewData["Title"] = "Kopya Sil";
}

<h2>Kopya Sil</h2>
<hr />

<p>Bu kopyayı silmek istediğinize emin misiniz?</p>

<dl class="row">
    <dt class="col-sm-2">Kitap</dt>
    <dd class="col-sm-10">@Model.Book?.Title</dd>
    <dt class="col-sm-2">Raf</dt>
    <dd class="col-sm-10">@Model.ShelfLocation</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CopyId" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>


