@model KutuphaneOtomasyonu.Models.Copy
@{
    ViewData["Title"] = "Kopya Detayı";
}

<h2>Kopya Detayı</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Kitap</dt>
    <dd class="col-sm-10">@Model.Book?.Title</dd>
    <dt class="col-sm-2">Raf</dt>
    <dd class="col-sm-10">@Model.ShelfLocation</dd>
    <dt class="col-sm-2">Durum</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>

<div class="d-flex gap-2">
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.CopyId">Düzenle</a>
</div>


