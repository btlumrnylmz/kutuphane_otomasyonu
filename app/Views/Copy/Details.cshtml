@using KutuphaneOtomasyonu.Services
@inject AuthService AuthService
@model KutuphaneOtomasyonu.Models.Copy
@{
    ViewData["Title"] = "Kopya Detayı";
    var isAdmin = AuthService.IsAdmin();
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-copy me-2"></i>
                        Kopya Detayı
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h5 class="text-primary">Kopya Bilgileri</h5>
                                <hr>
                                <dl class="row">
                                    <dt class="col-sm-3">
                                        <i class="fas fa-book me-1"></i>
                                        Kitap
                                    </dt>
                                    <dd class="col-sm-9">
                                        @if (Model.Book != null)
                                        {
                                            <strong>@Model.Book.Title</strong>
                                            <br>
                                            <small class="text-muted">Yazar: @Model.Book.Author</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Kitap bilgisi yok</span>
                                        }
                                    </dd>
                                    
                                    <dt class="col-sm-3">
                                        <i class="fas fa-hashtag me-1"></i>
                                        Kopya No
                                    </dt>
                                    <dd class="col-sm-9">@Model.CopyNumber</dd>
                                    
                                    <dt class="col-sm-3">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        Raf Konumu
                                    </dt>
                                    <dd class="col-sm-9">
                                        <span class="badge bg-info">@Model.ShelfLocation</span>
                                    </dd>
                                    
                                    <dt class="col-sm-3">
                                        <i class="fas fa-toggle-on me-1"></i>
                                        Durum
                                    </dt>
                                    <dd class="col-sm-9">
                                        @switch (Model.Status)
                                        {
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Available:
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>
                                                    Müsait
                                                </span>
                                                break;
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Loaned:
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-book-reader me-1"></i>
                                                    Ödünç Verilmiş
                                                </span>
                                                break;
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Reserved:
                                                <span class="badge bg-info">
                                                    <i class="fas fa-clock me-1"></i>
                                                    Rezerve
                                                </span>
                                                break;
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Maintenance:
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-tools me-1"></i>
                                                    Bakımda
                                                </span>
                                                break;
                                            case KutuphaneOtomasyonu.Models.CopyStatus.Damaged:
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                                    Hasarlı
                                                </span>
                                                break;
                                        }
                                    </dd>
                                    
                                    <dt class="col-sm-3">
                                        <i class="fas fa-calendar-plus me-1"></i>
                                        Eklenme Tarihi
                                    </dt>
                                    <dd class="col-sm-9">@Model.AddedAt.ToString("dd.MM.yyyy")</dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex flex-wrap gap-2 mt-4">
                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                        
                        @if (isAdmin)
                        {
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.CopyId">
                                <i class="fas fa-edit me-1"></i>
                                Düzenle
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
