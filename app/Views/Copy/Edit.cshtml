@using KutuphaneOtomasyonu.Services
@inject AuthService AuthService
@model KutuphaneOtomasyonu.Models.Copy
@{
    ViewData["Title"] = "Kopya Düzenle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Kopya Düzenle
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="row g-3">
                        <input type="hidden" asp-for="CopyId" />
                        <input type="hidden" asp-for="CopyNumber" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-book me-1"></i>
                                <strong>Kitap</strong>
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId">
                                <option value="">-- Kitap Seçin --</option>
                            </select>
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Status" class="form-label">
                                <i class="fas fa-info-circle me-1"></i>
                                <strong>Durum</strong>
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<KutuphaneOtomasyonu.Models.CopyStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="ShelfLocation" class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                <strong>Raf Konumu</strong>
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ShelfLocation" class="form-control" placeholder="Örn: A1-05" required />
                            <span asp-validation-for="ShelfLocation" class="text-danger"></span>
                        </div>
                        <div class="col-12 d-flex flex-wrap gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Güncelle
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
