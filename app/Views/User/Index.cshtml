@model IEnumerable<KutuphaneOtomasyonu.Models.User>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>
                        Kullanıcı Yönetimi
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        Yeni Kullanıcı
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Kullanıcı Adı</th>
                                    <th>Ad Soyad</th>
                                    <th>E-posta</th>
                                    <th>Rol</th>
                                    <th>Durum</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Son Giriş</th>
                                    <th width="200">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@user.Username</strong>
                                        </td>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @if (user.Role == KutuphaneOtomasyonu.Models.UserRole.Admin)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-crown me-1"></i>
                                                    Yönetici
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">
                                                    <i class="fas fa-user me-1"></i>
                                                    Kullanıcı
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.Status == KutuphaneOtomasyonu.Models.UserStatus.Active)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>
                                                    Aktif
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-times-circle me-1"></i>
                                                    Pasif
                                                </span>
                                            }
                                        </td>
                                        <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @if (user.LastLoginAt.HasValue)
                                            {
                                                @user.LastLoginAt.Value.ToString("dd.MM.yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Hiç giriş yapmamış</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-info" title="Detaylar">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-danger" title="Sil">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
