@model KutuphaneOtomasyonu.Models.User
@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        Kullanıcı Detayları
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user me-1"></i>
                                    Kullanıcı Adı
                                </label>
                                <p class="form-control-plaintext">@Model.Username</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope me-1"></i>
                                    E-posta
                                </label>
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-id-card me-1"></i>
                            Ad Soyad
                        </label>
                        <p class="form-control-plaintext">@Model.FullName</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user-tag me-1"></i>
                                    Rol
                                </label>
                                <p class="form-control-plaintext">
                                    @if (Model.Role == KutuphaneOtomasyonu.Models.UserRole.Admin)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-crown me-1"></i>
                                            Yönetici
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-user me-1"></i>
                                            Kullanıcı
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-toggle-on me-1"></i>
                                    Durum
                                </label>
                                <p class="form-control-plaintext">
                                    @if (Model.Status == KutuphaneOtomasyonu.Models.UserStatus.Active)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>
                                            Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-times-circle me-1"></i>
                                            Pasif
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-calendar-plus me-1"></i>
                                    Oluşturulma Tarihi
                                </label>
                                <p class="form-control-plaintext">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-sign-in-alt me-1"></i>
                                    Son Giriş
                                </label>
                                <p class="form-control-plaintext">
                                    @if (Model.LastLoginAt.HasValue)
                                    {
                                        @Model.LastLoginAt.Value.ToString("dd.MM.yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Hiç giriş yapmamış</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>
                            Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
