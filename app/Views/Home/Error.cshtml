@model KutuphaneOtomasyonu.Controllers.ErrorViewModel
@{
    ViewData["Title"] = "Hata";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        @if (Model.StatusCode == 404)
                        {
                            <i class="fas fa-exclamation-triangle text-warning" style="font-size: 5rem;"></i>
                        }
                        else if (Model.StatusCode == 403)
                        {
                            <i class="fas fa-lock text-danger" style="font-size: 5rem;"></i>
                        }
                        else
                        {
                            <i class="fas fa-exclamation-circle text-danger" style="font-size: 5rem;"></i>
                        }
                    </div>
                    
                    <h1 class="display-4 fw-bold mb-3">@Model.StatusCode</h1>
                    <h2 class="h4 mb-4">@Model.ErrorTitle</h2>
                    <p class="text-muted mb-4">@Model.ErrorDescription</p>
                    
                    @if (!string.IsNullOrEmpty(Model.ExceptionMessage) && User.IsInRole("Admin"))
                    {
                        <div class="alert alert-info text-start mb-4">
                            <strong>Hata Detayı (Sadece Yöneticiler):</strong><br>
                            <code>@Model.ExceptionMessage</code>
                        </div>
                    }
                    
                    <div class="d-flex gap-3 justify-content-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Git
                        </button>
                    </div>
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted small mt-4 mb-0">
                            İstek ID: <code>@Model.RequestId</code>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
