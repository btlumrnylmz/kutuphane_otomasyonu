@model KutuphaneOtomasyonu.Models.Book
@{
    ViewData["Title"] = "Yeni Kitap";
}

<h2>Yeni Kitap</h2>
<hr />

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-4">
        <label asp-for="Isbn" class="form-label">ISBN</label>
        <input asp-for="Isbn" class="form-control" />
        <span asp-validation-for="Isbn" class="text-danger"></span>
    </div>
    <div class="col-md-8">
        <label asp-for="Title" class="form-label">Başlık</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Author" class="form-label">Yazar</label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="PublishYear" class="form-label">Yayın Yılı</label>
        <input asp-for="PublishYear" class="form-control" />
        <span asp-validation-for="PublishYear" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Category" class="form-label">Kategori</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="PageCount" class="form-label">Sayfa Sayısı</label>
        <input asp-for="PageCount" type="number" class="form-control" />
        <span asp-validation-for="PageCount" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="CoverImageUrl" class="form-label">Kapak Görsel URL</label>
        <input asp-for="CoverImageUrl" type="url" class="form-control" placeholder="https://example.com/image.jpg" />
        <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
        <small class="form-text text-muted">Kitap kapağı görselinin URL adresi</small>
    </div>
    <div class="col-12">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kitap hakkında kısa bir açıklama..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


