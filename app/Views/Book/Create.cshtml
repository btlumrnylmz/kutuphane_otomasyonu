@using KutuphaneOtomasyonu.Services
@inject AuthService AuthService
@model KutuphaneOtomasyonu.Models.Book
@{
    ViewData["Title"] = "Yeni Kitap";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Yeni Kitap Ekle
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="col-md-4">
                            <label asp-for="Isbn" class="form-label">
                                <i class="fas fa-barcode me-1"></i>
                                <strong>ISBN</strong>
                            </label>
                            <input asp-for="Isbn" class="form-control" placeholder="ISBN numarasını girin" />
                            <span asp-validation-for="Isbn" class="text-danger"></span>
                        </div>
                        <div class="col-md-8">
                            <label asp-for="Title" class="form-label">
                                <i class="fas fa-book me-1"></i>
                                <strong>Kitap Başlığı</strong>
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Kitap başlığını girin" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Author" class="form-label">
                                <i class="fas fa-user me-1"></i>
                                <strong>Yazar</strong>
                            </label>
                            <input asp-for="Author" class="form-control" placeholder="Yazar adını girin" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="PublishYear" class="form-label">
                                <i class="fas fa-calendar me-1"></i>
                                <strong>Yayın Yılı</strong>
                            </label>
                            <input asp-for="PublishYear" type="number" class="form-control" placeholder="Yıl" min="1000" max="@DateTime.Now.Year" />
                            <span asp-validation-for="PublishYear" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Category" class="form-label">
                                <i class="fas fa-tag me-1"></i>
                                <strong>Kategori</strong>
                            </label>
                            <input asp-for="Category" class="form-control" placeholder="Kategori" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PageCount" class="form-label">
                                <i class="fas fa-file-alt me-1"></i>
                                <strong>Sayfa Sayısı</strong>
                            </label>
                            <input asp-for="PageCount" type="number" class="form-control" placeholder="Sayfa sayısı" min="1" />
                            <span asp-validation-for="PageCount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label for="coverImage" class="form-label">
                                <i class="fas fa-image me-1"></i>
                                <strong>Kapak Görseli</strong>
                            </label>
                            <input type="file" id="coverImage" name="coverImage" class="form-control" accept="image/jpeg,image/jpg,image/png" />
                            <small class="form-text text-muted">JPG, JPEG veya PNG formatında (maks. 5MB)</small>
                        </div>
                        <div class="col-12">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-1"></i>
                                <strong>Açıklama</strong>
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kitap hakkında kısa bir açıklama..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="col-12 d-flex flex-wrap gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
