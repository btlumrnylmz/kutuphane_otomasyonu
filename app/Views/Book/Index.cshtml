@using KutuphaneOtomasyonu.Services
@inject AuthService AuthService
@model IEnumerable<KutuphaneOtomasyonu.Models.Book>
@{
    ViewData["Title"] = "Kitaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isLoggedIn = AuthService.IsLoggedIn();
    var favoriteBookIds = ViewBag.FavoriteBookIds as List<int> ?? new List<int>();
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 style="font-family: 'Playfair Display', serif; color: #1E293B; font-size: 2.5rem; margin: 0;">
                        <i class="fas fa-book me-2" style="color: #6366F1;"></i>
                        Kitaplar
                    </h1>
                    <p class="text-muted mt-2 mb-0">Kütüphanemizdeki tüm kitapları keşfedin</p>
                </div>
                @if (AuthService.IsAdmin())
                {
                    <a class="btn btn-primary" asp-action="Create" style="border-radius: 30px; padding: 0.75rem 2rem;">
                        <i class="fas fa-plus me-2"></i>
                        Yeni Kitap Ekle
                    </a>
                }
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 10px;">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 10px;">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Arama ve Filtreleme -->
    <div class="card border-0 shadow-sm mb-4" style="border-radius: 15px;">
        <div class="card-body p-4">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="fas fa-search me-2"></i>
                        <strong>Ara</strong>
                    </label>
                    <input type="text" name="searchTerm" class="form-control" placeholder="Kitap adı, yazar, ISBN..." value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-tag me-2"></i>
                        <strong>Kategori</strong>
                    </label>
                    <select name="category" class="form-select">
                        <option value="">Tüm Kategoriler</option>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var cat in (List<string>)ViewBag.Categories)
                            {
                                <option value="@cat" selected="@(ViewBag.SelectedCategory == cat)">@cat</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-user me-2"></i>
                        <strong>Yazar</strong>
                    </label>
                    <select name="author" class="form-select">
                        <option value="">Tüm Yazarlar</option>
                        @if (ViewBag.Authors != null)
                        {
                            @foreach (var auth in (List<string>)ViewBag.Authors)
                            {
                                <option value="@auth" selected="@(ViewBag.SelectedAuthor == auth)">@auth</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100" style="border-radius: 10px;">
                        <i class="fas fa-search me-1"></i>
                        Filtrele
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || !string.IsNullOrEmpty(ViewBag.SelectedCategory as string) || !string.IsNullOrEmpty(ViewBag.SelectedAuthor as string))
                {
                    <div class="col-12">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>
                            Filtreleri Temizle
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card h-100 border-0 shadow-sm" style="transition: all 0.3s ease;">
                        <div class="card-body d-flex flex-column">
                            <div class="text-center mb-3" style="height: 200px; border-radius: 10px; overflow: hidden; background: linear-gradient(135deg, #F5F3FF 0%, #E0E7FF 100%); display: flex; align-items: center; justify-content: center;">
                                @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                                {
                                    <img src="@item.CoverImageUrl" alt="@item.Title" style="width: 100%; height: 100%; object-fit: cover;" />
                                }
                                else
                                {
                                    <i class="fas fa-book fa-4x" style="color: #6366F1; opacity: 0.8;"></i>
                                }
                            </div>
                            <h5 class="card-title mb-2" style="font-family: 'Playfair Display', serif; color: #1E293B; font-size: 1.2rem; min-height: 3rem;">
                                @item.Title
                            </h5>
                            <div class="mb-3 flex-grow-1">
                                <p class="mb-2" style="color: #6366F1;">
                                    <i class="fas fa-user me-2"></i>
                                    <strong>Yazar:</strong> @item.Author
                                </p>
                                <p class="mb-2" style="color: #6366F1;">
                                    <i class="fas fa-tag me-2"></i>
                                    <strong>Kategori:</strong> @item.Category
                                </p>
                                <p class="mb-2" style="color: #6366F1;">
                                    <i class="fas fa-calendar me-2"></i>
                                    <strong>Yıl:</strong> @item.PublishYear
                                </p>
                                @if (item.PageCount.HasValue)
                                {
                                    <p class="mb-2" style="color: #6366F1;">
                                        <i class="fas fa-file-alt me-2"></i>
                                        <strong>Sayfa:</strong> @item.PageCount
                                    </p>
                                }
                                <p class="mb-0 small text-muted">
                                    <i class="fas fa-barcode me-2"></i>
                                    ISBN: @item.Isbn
                                </p>
                            </div>
                            <div class="d-grid gap-2">
                                <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.BookId" style="border-radius: 20px;">
                                    <i class="fas fa-eye me-1"></i>
                                    Detaylar
                                </a>
                                @if (isLoggedIn)
                                {
                                    var isFavorite = favoriteBookIds.Contains(item.BookId);
                                    if (isFavorite)
                                    {
                                        <form asp-action="RemoveFromFavorites" method="post" class="d-inline">
                                            <input type="hidden" name="bookId" value="@item.BookId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100" style="border-radius: 20px;">
                                                <i class="fas fa-heart me-1"></i>
                                                Favorilerden Çıkar
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="AddToFavorites" method="post" class="d-inline">
                                            <input type="hidden" name="bookId" value="@item.BookId" />
                                            <button type="submit" class="btn btn-outline-warning btn-sm w-100" style="border-radius: 20px;">
                                                <i class="far fa-heart me-1"></i>
                                                Favorilere Ekle
                                            </button>
                                        </form>
                                    }
                                }
                                @if (AuthService.IsAdmin())
                                {
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@item.BookId" style="border-radius: 20px 0 0 20px;">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.BookId" style="border-radius: 0 20px 20px 0;">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-book-open fa-4x text-muted mb-3" style="opacity: 0.3;"></i>
                <h5 class="text-muted">Henüz kitap eklenmemiş</h5>
                <p class="text-muted">İlk kitabı eklemek için yukarıdaki butonu kullanın.</p>
            </div>
        </div>
    }
</div>
