@model IEnumerable<KutuphaneOtomasyonu.Models.Book>
@{
    ViewData["Title"] = "Kitaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";//view start eklersem layout oluşucak
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Kitaplar</h2>
    <a class="btn btn-primary" asp-action="Create">Yeni Kitap</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Yıl</th>
            <th>Kategori</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Isbn</td>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td>@item.PublishYear</td>
            <td>@item.Category</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.BookId">Detay</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.BookId">Düzenle</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.BookId">Sil</a>
            </td>
        </tr>
    }
    </tbody>
}</table>


