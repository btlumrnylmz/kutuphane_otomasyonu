@using KutuphaneOtomasyonu.Services
@inject AuthService AuthService
@model IEnumerable<KutuphaneOtomasyonu.Models.Member>
@{
    ViewData["Title"] = "Üyeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = AuthService.IsAdmin();
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 style="font-family: 'Playfair Display', serif; color: #1E293B; font-size: 2.5rem; margin: 0;">
                        <i class="fas fa-users me-2" style="color: #6366F1;"></i>
                        Üyeler
                    </h1>
                    <p class="text-muted mt-2 mb-0">Kütüphane üyelerini yönetin</p>
                </div>
                @if (isAdmin)
                {
                    <a class="btn btn-primary" asp-action="Create" style="border-radius: 30px; padding: 0.75rem 2rem;">
                        <i class="fas fa-plus me-2"></i>
                        Yeni Üye Ekle
                    </a>
                }
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 10px;">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 10px;">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Arama -->
    <div class="card border-0 shadow-sm mb-4" style="border-radius: 15px;">
        <div class="card-body p-4">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <label class="form-label">
                        <i class="fas fa-search me-2"></i>
                        <strong>Ara</strong>
                    </label>
                    <input type="text" name="searchTerm" class="form-control" placeholder="Ad, e-posta veya telefon ile ara..." value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100" style="border-radius: 10px;">
                        <i class="fas fa-search me-1"></i>
                        Filtrele
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                {
                    <div class="col-12">
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>
                            Filtreleri Temizle
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm" style="border-radius: 15px;">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Ad Soyad</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Durum</th>
                                <th>Üyelik Tarihi</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.FullName</strong></td>
                                    <td>@item.Email</td>
                                    <td>@(item.Phone ?? "-")</td>
                                    <td>
                                        @if (item.Status == KutuphaneOtomasyonu.Models.MemberStatus.Active)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times-circle me-1"></i>
                                                Pasif
                                            </span>
                                        }
                                    </td>
                                    <td>@item.JoinedAt.ToString("dd.MM.yyyy")</td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.MemberId" class="btn btn-sm btn-outline-info" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (isAdmin)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.MemberId" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.MemberId" class="btn btn-sm btn-outline-danger" title="Sil">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (ViewBag.Pagination != null)
        {
            <div class="mt-4">
                <partial name="_Pagination" model="ViewBag.Pagination" />
            </div>
        }
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5 p-4">
                <i class="fas fa-users fa-4x text-muted mb-3" style="opacity: 0.3;"></i>
                <h5 class="text-muted">Henüz üye eklenmemiş</h5>
                <p class="text-muted">İlk üyeyi eklemek için yukarıdaki butonu kullanın.</p>
            </div>
        </div>
    }
</div>
