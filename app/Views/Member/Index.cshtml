@model IEnumerable<KutuphaneOtomasyonu.Models.Member>
@{
    ViewData["Title"] = "Üyeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Üyeler</h2>
    <a class="btn btn-primary" asp-action="Create">Yeni Üye</a>
}</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>E-posta</th>
            <th>Telefon</th>
            <th>Durum</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.Status</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.MemberId">Detay</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.MemberId">Düzenle</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.MemberId">Sil</a>
            </td>
        </tr>
    }
    </tbody>
}</table>


