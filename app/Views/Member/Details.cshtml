@using KutuphaneOtomasyonu.Services
@inject AuthService AuthService
@model KutuphaneOtomasyonu.Models.Member
@{
    ViewData["Title"] = "Üye Detayı";
    var isAdmin = AuthService.IsAdmin();
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>
                        @Model.FullName
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h5 class="text-primary">Üye Bilgileri</h5>
                                <hr>
                                <dl class="row">
                                    <dt class="col-sm-3">
                                        <i class="fas fa-id-card me-1"></i>
                                        Ad Soyad
                                    </dt>
                                    <dd class="col-sm-9">@Model.FullName</dd>
                                    
                                    <dt class="col-sm-3">
                                        <i class="fas fa-envelope me-1"></i>
                                        E-posta
                                    </dt>
                                    <dd class="col-sm-9">@Model.Email</dd>
                                    
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <dt class="col-sm-3">
                                            <i class="fas fa-phone me-1"></i>
                                            Telefon
                                        </dt>
                                        <dd class="col-sm-9">@Model.Phone</dd>
                                    }
                                    
                                    <dt class="col-sm-3">
                                        <i class="fas fa-toggle-on me-1"></i>
                                        Durum
                                    </dt>
                                    <dd class="col-sm-9">
                                        @if (Model.Status == KutuphaneOtomasyonu.Models.MemberStatus.Active)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times-circle me-1"></i>
                                                Pasif
                                            </span>
                                        }
                                    </dd>
                                    
                                    <dt class="col-sm-3">
                                        <i class="fas fa-calendar-plus me-1"></i>
                                        Üyelik Tarihi
                                    </dt>
                                    <dd class="col-sm-9">@Model.JoinedAt.ToString("dd.MM.yyyy")</dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5 class="text-primary">Ödünç Kayıtları</h5>
                        <hr>
                        @if (Model.Loans != null && Model.Loans.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Kitap</th>
                                            <th>Ödünç Tarihi</th>
                                            <th>Vade Tarihi</th>
                                            <th>İade Tarihi</th>
                                            <th>Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var loan in Model.Loans.OrderByDescending(l => l.LoanedAt))
                                        {
                                            <tr>
                                                <td>
                                                    @if (loan.Copy?.Book != null)
                                                    {
                                                        <strong>@loan.Copy.Book.Title</strong>
                                                        @if (!string.IsNullOrEmpty(loan.Copy.ShelfLocation))
                                                        {
                                                            <br><small class="text-muted">Raf: @loan.Copy.ShelfLocation</small>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Kopya bilgisi yok</span>
                                                    }
                                                </td>
                                                <td>@loan.LoanedAt.ToString("dd.MM.yyyy")</td>
                                                <td>@loan.DueAt.ToString("dd.MM.yyyy")</td>
                                                <td>
                                                    @if (loan.ReturnedAt.HasValue)
                                                    {
                                                        <span class="text-success">@loan.ReturnedAt.Value.ToString("dd.MM.yyyy")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (loan.ReturnedAt == null)
                                                    {
                                                        @if (loan.DueAt < DateTime.UtcNow)
                                                        {
                                                            <span class="badge bg-danger">
                                                                <i class="fas fa-exclamation-triangle me-1"></i>
                                                                Gecikmiş
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-warning">
                                                                <i class="fas fa-book-reader me-1"></i>
                                                                Aktif
                                                            </span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check me-1"></i>
                                                            İade Edildi
                                                        </span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Bu üyenin henüz ödünç kaydı bulunmamaktadır.
                            </div>
                        }
                    </div>

                    <div class="d-flex flex-wrap gap-2 mt-4">
                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                        
                        @if (isAdmin)
                        {
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.MemberId">
                                <i class="fas fa-edit me-1"></i>
                                Düzenle
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
