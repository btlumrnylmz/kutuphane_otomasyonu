@model KutuphaneOtomasyonu.Models.Member
@{
    ViewData["Title"] = "Üye Detayı";
}

<h2>Üye Detayı</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Ad Soyad</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">E-posta</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Telefon</dt>
    <dd class="col-sm-10">@Model.Phone</dd>
    <dt class="col-sm-2">Durum</dt>
    <dd class="col-sm-10">@Model.Status</dd>
    <dt class="col-sm-2">Üyelik Tarihi</dt>
    <dd class="col-sm-10">@Model.JoinedAt</dd>
</dl>

<h5>Ödünç Kayıtları</h5>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Kopya</th>
            <th>Ödünç</th>
            <th>Vade</th>
            <th>İade</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var l in Model.Loans)
    {
        <tr>
            <td>@l.CopyId</td>
            <td>@l.LoanedAt</td>
            <td>@l.DueAt</td>
            <td>@(l.ReturnedAt?.ToString() ?? "-")</td>
        </tr>
    }
    </tbody>
</table>

<div class="d-flex gap-2">
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.MemberId">Düzenle</a>
</div>


