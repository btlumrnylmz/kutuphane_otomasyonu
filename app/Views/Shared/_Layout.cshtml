@using KutuphaneOtomasyonu.Services
@inject AuthService AuthService
@{
    var title = ViewData["Title"] as string ?? "Kutuphane Otomasyonu";
    var currentUser = AuthService.GetCurrentUser();
    var isLoggedIn = AuthService.IsLoggedIn();
    var isAdmin = AuthService.IsAdmin();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Kutuphane</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Book" asp-action="Index">Kitaplar</a></li>
                    @if (isAdmin)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Member" asp-action="Index">Üyeler</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Kullanıcı Yönetimi</a></li>
                    }
                    <li class="nav-item"><a class="nav-link" asp-controller="Copy" asp-action="Index">Kopyalar</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Loan" asp-action="Index">Ödünç İşlemleri</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Reports" asp-action="Index">Raporlar</a></li>
                </ul>
                
                @if (isLoggedIn)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-1"></i>
                                @currentUser?.FullName
                                @if (isAdmin)
                                {
                                    <span class="badge bg-warning text-dark ms-1">Yönetici</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <main>
        @RenderBody()
    </main>
    
    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>İletişim</h5>
                    <p>
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Atatürk Bulvarı No: 123<br>
                        06500 Çankaya/Ankara
                    </p>
                    <p>
                        <i class="fas fa-phone me-2"></i>
                        +90 (312) 123 45 67
                    </p>
                    <p>
                        <i class="fas fa-envelope me-2"></i>
                        info@kutuphane.gov.tr
                    </p>
                </div>
                <div class="col-md-4">
                    <h5>Çalışma Saatleri</h5>
                    <p>
                        <strong>Pazartesi - Cuma:</strong> 08:00 - 18:00<br>
                        <strong>Cumartesi:</strong> 09:00 - 16:00<br>
                        <strong>Pazar:</strong> Kapalı
                    </p>
                </div>
                <div class="col-md-4">
                    <h5>Hızlı Linkler</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Book" asp-action="Index" class="text-light">Kitaplar</a></li>
                        @if (isAdmin)
                        {
                            <li><a asp-controller="Member" asp-action="Index" class="text-light">Üyeler</a></li>
                            <li><a asp-controller="User" asp-action="Index" class="text-light">Kullanıcı Yönetimi</a></li>
                        }
                        <li><a asp-controller="Loan" asp-action="Index" class="text-light">Ödünç İşlemleri</a></li>
                        <li><a asp-controller="Reports" asp-action="Index" class="text-light">Raporlar</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2024 Kütüphane Otomasyonu. Tüm hakları saklıdır.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">
                        <i class="fas fa-heart text-danger"></i>
                        Kitaplarla büyüyen bir toplum için
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @RenderSection("Scripts", required: false)
</body>
</html>


