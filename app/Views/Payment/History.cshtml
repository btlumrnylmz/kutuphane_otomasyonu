@model IEnumerable<KutuphaneOtomasyonu.Models.Payment>
@{
    ViewData["Title"] = "Ödeme Geçmişi";
    var loan = ViewBag.Loan as KutuphaneOtomasyonu.Models.Loan;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i>
                        Ödeme Geçmişi
                    </h3>
                </div>
                <div class="card-body">
                    @if (loan != null)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Ödünç Bilgileri</h5>
                                <hr />
                                <p><strong>Üye:</strong> @loan.Member?.FullName</p>
                                <p><strong>Kitap:</strong> @loan.Copy?.Book?.Title</p>
                                <p><strong>Vade Tarihi:</strong> @loan.DueAt.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ödeme Tarihi</th>
                                    <th>Tutar</th>
                                    <th>Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model)
                                {
                                    <tr>
                                        <td>@payment.PaymentDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td><strong class="text-success">@payment.Amount.ToString("F2") TL</strong></td>
                                        <td>@(payment.Description ?? "-")</td>
                                    </tr>
                                }
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">Bu ödünç için henüz ödeme kaydı bulunmamaktadır.</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr class="table-info">
                                        <td><strong>TOPLAM</strong></td>
                                        <td><strong class="text-primary">@Model.Sum(p => p.Amount).ToString("F2") TL</strong></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <a asp-action="OverdueLoans" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

