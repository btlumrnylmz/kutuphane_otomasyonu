@model IEnumerable<KutuphaneOtomasyonu.Models.Payment>
@{
    ViewData["Title"] = "Ödeme Geçmişi";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-money-bill-wave me-2"></i>
                        Ödeme Geçmişi
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ödeme Tarihi</th>
                                    <th>Üye</th>
                                    <th>Kitap</th>
                                    <th>Tutar</th>
                                    <th>Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model)
                                {
                                    <tr>
                                        <td>@payment.PaymentDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@payment.Loan?.Member?.FullName</td>
                                        <td>@payment.Loan?.Copy?.Book?.Title</td>
                                        <td><strong class="text-success">@payment.Amount.ToString("F2") TL</strong></td>
                                        <td>@(payment.Description ?? "-")</td>
                                    </tr>
                                }
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">Henüz ödeme kaydı bulunmamaktadır.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    @if (ViewBag.Pagination != null)
                    {
                        <div class="mt-4">
                            <partial name="_Pagination" model="ViewBag.Pagination" />
                        </div>
                    }
                    
                    <div class="mt-3">
                        <a asp-action="OverdueLoans" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Geciken Ödünçler
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

