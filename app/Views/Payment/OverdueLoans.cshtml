@using KutuphaneOtomasyonu.Services
@inject AuthService AuthService
@model IEnumerable<KutuphaneOtomasyonu.Controllers.OverdueLoanViewModel>
@{
    ViewData["Title"] = "Geciken Ödünçler ve Ödemeler";
    var isAdmin = AuthService.IsAdmin();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @if (isAdmin)
                        {
                            <text>Tüm Geciken Ödünçler ve Ödemeler</text>
                        }
                        else
                        {
                            <text>Geciken Ödünçlerim ve Ödemelerim</text>
                        }
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Bilgi:</strong> Geciken ödünçler için günlük <strong>5.00 TL</strong> yaptırım ücreti uygulanmaktadır.
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    @if (isAdmin)
                                    {
                                        <th>Üye</th>
                                    }
                                    <th>Kitap</th>
                                    <th>Vade Tarihi</th>
                                    <th>Gecikme (Gün)</th>
                                    <th>Toplam Borç</th>
                                    <th>Ödenen</th>
                                    <th>Kalan Borç</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @if (isAdmin)
                                        {
                                            <td>
                                                <strong>@item.Loan.Member.FullName</strong><br>
                                                <small class="text-muted">@item.Loan.Member.Email</small>
                                            </td>
                                        }
                                        <td>@item.Loan.Copy.Book.Title</td>
                                        <td>@item.Loan.DueAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            <span class="badge bg-danger">@item.DelayDays gün</span>
                                        </td>
                                        <td><strong>@item.TotalPenalty.ToString("F2") TL</strong></td>
                                        <td class="text-success">@item.PaidAmount.ToString("F2") TL</td>
                                        <td>
                                            @if (item.RemainingAmount > 0)
                                            {
                                                <strong class="text-danger">@item.RemainingAmount.ToString("F2") TL</strong>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Ödendi</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.RemainingAmount > 0 && !isAdmin)
                                            {
                                                <a asp-action="Pay" asp-route-loanId="@item.Loan.LoanId" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-money-bill-wave me-1"></i>
                                                    Ödeme Yap
                                                </a>
                                            }
                                            <a asp-action="History" asp-route-loanId="@item.Loan.LoanId" class="btn btn-sm btn-info">
                                                <i class="fas fa-history me-1"></i>
                                                Geçmiş
                                            </a>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="@(isAdmin ? 8 : 7)" class="text-center text-muted">
                                            <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                                            <br />
                                            @if (isAdmin)
                                            {
                                                <text>Tüm kullanıcılarda geciken ödünç bulunmamaktadır.</text>
                                            }
                                            else
                                            {
                                                <text>Geciken ödüncünüz bulunmamaktadır.</text>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

